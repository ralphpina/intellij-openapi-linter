<idea-plugin>
    <id>com.github.ralphpina.intellijopenapilinter</id>
    <name>intellij-openapi-linter</name>
    <vendor>ralphpina</vendor>

    <!-- Product and plugin compatibility requirements -->
    <!-- https://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService serviceImplementation="net.ralphpina.intellij.openapilinter.services.MyApplicationService"/>
        <projectService serviceImplementation="net.ralphpina.intellij.openapilinter.services.MyProjectService"/>
    </extensions>

    <applicationListeners>
        <listener class="net.ralphpina.intellij.openapilinter.listeners.MyProjectManagerListener"
                  topic="com.intellij.openapi.project.ProjectManagerListener"/>
    </applicationListeners>
</idea-plugin>
